@model Expense_Tracker.Models.Transaction

@{
    ViewData["Title"] = "Create";
}

<style>
    .card {
        font-family: 'Inter';
        width: 200px;
        height: 200px;
        border-radius: 12px;
        text-align: center;
        margin:10px;
        background-color: #208E33;
        padding: 10px;
    }

    .card-header {
        background-color: #208E33;
        padding: 20px 0;
    }

    .rupee-sign {
        font-size: 24px;
    }

    .card-body {
        padding: 20px;
        background-color: #208E33;
    }

    .amount {
        font-size: 18px;
        font-weight: bold;
    }
</style>

<div style="display:flex; flex-direction:row;">
    <div class="card">
        <div class="card-header">
            
            <h2>Total</h2>
        </div>
        <div class="card-body">
            <span class="rupee-sign">&#x20B9;</span>
            <span>@ViewBag.TotalSum</span>
        </div>
    </div>

    <div class="card">
        <div class="card-header">
            <h2>30 days</h2>
        </div>
        <div class="card-body">
            <span class="rupee-sign">&#x20B9;</span>
            <span> @ViewBag.LastMonthSum</span>
        </div>
    </div>

</div>
<h1>Create</h1>

<h4>Transaction</h4>
<hr />
<div class="row">
    <div class="col-md-4" style="width:1000px">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="mb-3">
                <ejs-dropdownlist id="ddlCategory" ejs-for="CategoryId"
                                  dataSource="@ViewBag.Categories" placeholder="Category"
                                  floatLabelType="Always" allowFiltering="true" ignoreAccent="true"
                                  filterType="Contains" popupHeight="220px" index="0">
                    <e-dropdownlist-fields value="CategoryId" text="Title"></e-dropdownlist-fields>
                </ejs-dropdownlist>
                <span asp-validation-for="CategoryId" class="text-danger fs-6"></span>
            </div>
            <div class="mb-3">
                <ejs-numerictextbox id="amount" ejs-for="Amount"
                                    placeholder="Amount" floatLabelType="Always"
                                    min=0 format="₹0"></ejs-numerictextbox>
                <span asp-validation-for="Amount" class="text-danger fs-6"></span>
            </div>
            <div class="mb-3">
                <ejs-textbox id="note" placeholder="Note" ejs-for="Note"
                             floatLabelType="Always" multiline="true"></ejs-textbox>
            </div>
            <div class="mb-3">
                <ejs-datepicker id="date" ejs-for="Date"
                                placeholder="Date" floatLabelType="Always"
                                format="MMM-dd-yy"></ejs-datepicker>
            </div>
            <div class="mb-3" style="width:100%; display:flex">
                <input type="submit" value="Create" class="btn btn-primary" style="width:50%;" />
                <a asp-action="Index" style="width:50%; margin-left:10px;"><button type="button" class="btn-success" style="width:100%; border-radius: 5px; border: none; font-size: 17px; padding:9px"> View </button></a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
